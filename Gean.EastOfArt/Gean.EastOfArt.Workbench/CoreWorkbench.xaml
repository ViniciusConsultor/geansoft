<Window x:Class="Gean.EastOfArt.Workbench.CoreWorkbench"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    Title="CoreWorkbench" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel LastChildFill="True">
        <DockPanel.LayoutTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </DockPanel.LayoutTransform>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="File">
                <MenuItem x:Name="ShowDockingManager" Header="Docking Manager Hidden" IsCheckable="True" />
                <MenuItem Header="Red" Tag="red" />
                <MenuItem Header="Green" Tag="green" />
                <MenuItem Header="Blue" Tag="blue" />
                <MenuItem Header="Gray" Tag="gray" />
                <MenuItem Header="Orange" Tag="orange" />
                <MenuItem Header="Lime" Tag="lime" />
                <MenuItem Header="Magenta" Tag="magenta" />
                <Separator/>
                <MenuItem Header="Reset" Tag="reset"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="DocumentContainer">
            <ad:DockingManager x:Name="_dockingManager"></ad:DockingManager>
        </ContentControl>
    </DockPanel>
</Window>
